<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework/Setup/Declaration/Schema/etc/schema.xsd">
    <table name="contact_form_submissions" resource="default" engine="innodb" comment="Contact Form Submissions">
        <column name="id" xsi:type="int" nullable="false" identity="true" comment="ID"/>
        <column name="name" xsi:type="varchar" nullable="false" length="255" comment="Name"/>
        <column name="email" xsi:type="varchar" nullable="false" length="255" comment="Email"/>
        <column name="message" xsi:type="text" nullable="false" comment="Message"/>
        <column name="created_at" xsi:type="timestamp" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
